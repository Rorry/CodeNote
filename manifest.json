{
  "manifest_version": 2,

  "name": "CodeNote",
  "description": "A web-clipper collects all code from page and formats it.",
  "version": "1.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "background" : {
    "page": "background.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "https://sandbox.evernote.com/",
    "https://sandbox.evernote.com/oauth",
    "https://sandbox.evernote.com/OAuth.action"
  ],

  "web_accessible_resources": ["resources/callback.html"] ,

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": [
        "lib/yui/yui-min.css",
        "lib/shCore.css", 
        "lib/shCoreDefault.css",
        "lib/highlight/idea.css",
        "lib/yui3-skin-code-note.css",
        "resources/code-note.css"
      ],
      "js": [
        "lib/xregexp-min.js", "lib/shCore.js", "lib/shBrushes.js",
        "lib/yui/yui-min.js",
        "lib/evernote-sdk-minified.js",
        "lib/highlight/highlight.pack.js",
        "src/tools/code-note.js",
        "src/tools/evernote-storage.js",
        "src/tools/css-inliner.js",
        "src/tools/code-note-popup.js",
        "src/code-selecter.js"
      ]
    }
  ],

  "browser_action": {
    "default_title": "CodeNote",
    "default_icon": "resources/1393874156_application-code-m.png"
  }
}
